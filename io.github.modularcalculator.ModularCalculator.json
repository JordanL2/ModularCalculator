{
    "app-id": "io.github.modularcalculator.ModularCalculator",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "modularcalculator-run",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host"
    ],
    "build-options": {
        "env": {
            "PYTHON": "/usr/bin/python3",
            "PIP": "/usr/bin/pip3"
        }
    },
    "modules": [
        {
            "name": "python-pyparsing",
            "buildsystem": "simple",
            "build-commands": [
                "${PIP} install --no-deps --no-use-pep517 --prefix=${FLATPAK_DEST} ."
            ],
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/p/pyparsing/pyparsing-2.4.6.tar.gz",
                    "sha256": "4c830582a84fb022400b85429791bc551f1f4871c33f23e44f353119e92f969f"
                }
            ]
        },
        {
            "name": "python-packaging",
            "buildsystem": "simple",
            "build-commands": [
                "${PIP} install --no-deps --no-use-pep517 --prefix=${FLATPAK_DEST} ."
            ],
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/p/packaging/packaging-20.1.tar.gz",
                    "sha256": "e665345f9eef0c621aa0bf2f8d78cf6d21904eef16a93f020240b704a57f1334"
                }
            ]
        },
        {
            "name": "python-toml",
            "buildsystem": "simple",
            "build-commands": [
                "${PIP} install --no-deps --no-use-pep517 --prefix=${FLATPAK_DEST} ."
            ],
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/t/toml/toml-0.10.0.tar.gz",
                    "sha256": "229f81c57791a41d65e399fc06bf0848bab550a9dfd5ed66df18ce5f05e73d5c"
                }
            ]
        },
        {
            "name": "sip",
            "buildsystem": "simple",
            "build-commands": [
                "${PIP} install --no-deps --no-use-pep517 --prefix=${FLATPAK_DEST} ."
            ],
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/s/sip/sip-5.1.1.tar.gz",
                    "sha256": "3b600dd1c8293bb7cf002a20dbbc736010c6a5e161241d73b16685744ffe57c2"
                }
            ]
        },
        {
            "name": "pyqt-sip",
            "buildsystem": "simple",
            "build-commands": [
                "${PIP} install --no-deps --no-use-pep517 --prefix=${FLATPAK_DEST} ."
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/p/pyqt5-sip/PyQt5_sip-12.7.1.tar.gz",
                    "sha256": "e6078f5ee7d31c102910d0c277a110e1c2a20a3fc88cd017a39e170120586d3f"
                }
            ]
        },
        {
            "name": "pyqt-builder",
            "buildsystem": "simple",
            "build-commands": [
                "${PIP} install --no-deps --no-use-pep517 --prefix=${FLATPAK_DEST} ."
            ],
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/p/pyqt-builder/PyQt-builder-1.2.0.tar.gz",
                    "sha256": "e449480cb8484945232fdb4b4c577056b7f4c2c44a9000960f6d4222d80f4a71"
                }
            ]
        },
        {
            "name": "pyqt",
            "buildsystem": "simple",
            "build-commands": [
                ". ${FLATPAK_BUILDER_BUILDDIR}/build"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/p/pyqt5/PyQt5-5.14.1.tar.gz",
                    "sha256": "2f230f2dbd767099de7a0cb915abdf0cbc3256a0b5bb910eb09b99117db7a65b"
                },
                {
                    "type": "file",
                    "path": "pyqt-build",
                    "dest-filename": "build"
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "modularcalculator",
            "buildsystem": "simple",
            "build-commands": [
                "cp -r . /app/bin"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        },
        {
            "name": "icon",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/icons/hicolor/256x256/apps",
                "cp ./modcalc.png /app/share/icons/hicolor/256x256/apps/io.github.modularcalculator.ModularCalculator.png"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "modcalc.png"
                }
            ]
        },
        {
            "name": "desktop",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/applications",
                "cp ./ModularCalculator.desktop /app/share/applications/io.github.modularcalculator.ModularCalculator.desktop"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "ModularCalculator.desktop"
                }
            ]
        }
    ]
}
