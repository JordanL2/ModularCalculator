{
    "app-id": "io.github.modularcalculator.ModularCalculator",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "modularcalculator-run",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host"
    ],
    "build-options": {
        "env": {
            "PYTHON": "/usr/bin/python3",
            "PIP": "/usr/bin/pip3"
        }
    },
    "modules": [
        "pyqt.json",
        {
            "name": "modularcalculator",
            "buildsystem": "simple",
            "build-commands": [
                "cp -r modularcalculator /app/bin/modularcalculator",
                "cp modularcalculator-run /app/bin/",
                "cp modcalc.png /app/bin/",
                "mkdir -p /app/share/icons/hicolor/256x256/apps",
                "cp ./modcalc.png /app/share/icons/hicolor/256x256/apps/io.github.modularcalculator.ModularCalculator.png",
                "mkdir -p /app/share/applications",
                "cp ./ModularCalculator.desktop /app/share/applications/io.github.modularcalculator.ModularCalculator.desktop"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
