{
    "app-id": "io.github.modularcalculator.ModularCalculator",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "modularcalculator",
    "finish-args": [
        "--filesystem=home",
        "--socket=x11",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "install-pyqt5",
            "buildsystem": "simple",
            "build-options": {
                "build-args": [
                    "--share=network"
                ]
            },
            "build-commands": [
                "pip3 install --prefix=/app PyQt5"
            ]
        },
        {
            "name": "modularcalculator",
            "buildsystem": "simple",
            "build-commands": [
                "cp -r . /app/bin",
                "ln -s /app/bin /app/modularcalculator"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        },
        {
            "name": "icon",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/icons/hicolor/256x256/apps",
                "cp ./modcalc.png /app/share/icons/hicolor/256x256/apps/io.github.modularcalculator.ModularCalculator.png"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "modcalc.png"
                }
            ]
        },
        {
            "name": "desktop",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/applications",
                "cp ./ModularCalculator.desktop /app/share/applications/io.github.modularcalculator.ModularCalculator.desktop"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "ModularCalculator.desktop"
                }
            ]
        }
    ]
}
