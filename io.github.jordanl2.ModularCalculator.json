{
    "app-id": "io.github.jordanl2.ModularCalculator",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "modularcalculator",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host"
    ],
    "modules": [
        "pyqt.json",
        {
            "name": "modularcalculator",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-deps --no-use-pep517 --prefix=${FLATPAK_DEST} .",
                "install -Dm644 icons/64x64.png   /app/share/icons/hicolor/64x64/apps/io.github.jordanl2.ModularCalculator.png",
                "install -Dm644 icons/128x128.png /app/share/icons/hicolor/128x128/apps/io.github.jordanl2.ModularCalculator.png",
                "install -Dm644 icons/256x256.png /app/share/icons/hicolor/256x256/apps/io.github.jordanl2.ModularCalculator.png",
                "install -D ModularCalculator.desktop /app/share/applications/io.github.jordanl2.ModularCalculator.desktop",
                "install -D io.github.jordanl2.ModularCalculator.appdata.xml /app/share/metainfo/io.github.jordanl2.ModularCalculator.metainfo.xml"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
