{
    "app-id": "io.github.jordanl2.ModularCalculator",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "modularcalculator",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host"
    ],
    "modules": [
        "pyqt.json",
        {
            "name": "modularcalculator",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-deps --no-use-pep517 --prefix=${FLATPAK_DEST} .",
                "ln -snf /app/lib/python3.7/site-packages/modularcalculator/interface/modularcalculatorinterface.py /app/bin/modularcalculator",
                "chmod 0755 /app/lib/python3.7/site-packages/modularcalculator/interface/modularcalculatorinterface.py",
                "install modcalc.png /app/bin/modcalc.png",
                "mkdir -p /app/share/icons/hicolor/",
                "cp -r icons/* /app/share/icons/hicolor/",
                "install -D ModularCalculator.desktop /app/share/applications/io.github.jordanl2.ModularCalculator.desktop",
                "install -D io.github.jordanl2.ModularCalculator.appdata.xml /app/share/metainfo/io.github.jordanl2.ModularCalculator.metainfo.xml"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
